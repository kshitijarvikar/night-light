{
    "name": "Night & Light",
    "version": "1.0.0",
    "manifest_version": 2,
    "description": "Why to have any webpage in their mode, CONVERT any website into light or dark mode as per your mood",
    "background": {
        "service_worker": "script.js"
    },
    "browser_action": {
        "default_title": "Night&Light", 
        "default_popup": "index.html"
    },
    "permissions": [
        "https://*/*",
        "http://*/*",
        "tabs"
    ]    
}